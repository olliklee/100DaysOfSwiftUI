import SwiftUI

enum MyError: Error {
    case outOfBounds, noRoot
}

func squareRoot (of number: Int) throws -> Int {
    
    if number > 100_000 || number < 1 {throw MyError.outOfBounds}
    for i in 1...100{
        if i*i == number{
            return i
        }
    }
    throw MyError.noRoot
}

do {
    let root = try squareRoot(of: 10)
    print (root)
} catch MyError.noRoot {
    print ("Fehler: Root nicht gefunden")
} catch MyError.outOfBounds {
    print ("Fehler: Außerhalb des Bereichs")
} catch {
    print ("Unbekannter Fehler")
}

