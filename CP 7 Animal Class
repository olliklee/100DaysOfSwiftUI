import SwiftUI

class Animal {
    var legs: Int = 4
    func speak() { print ("Makes animal noises") }
}

class Dog: Animal { override func speak () { print ("Woof") }}

class Poodle: Dog { override func speak () { print ("Yip") }}

class Corgi: Dog { override func speak ( ){ print ("Kleff Kleff") }}

class Cat: Animal {
    var isTame: Bool 
    init(isTame: Bool){ self.isTame = isTame }
    override func speak () { print ("Miau") }
}

class Persian: Cat { 
    init () { super.init (isTame: true) }
    override func speak () { print ("Purr") }
}

class Lion: Cat {
    init() { super.init (isTame: false) }
    override func speak (){ print ("ROARRR") }
}

/// Test some
let animal = Animal()
let corgi = Corgi()
let lion = Lion()

animal.speak()
corgi.speak()
lion.speak()


