import SwiftUI

struct ContentView: View {
    @State private var checkAmount = 0.0
    @State private var numberOfPeople = 0
    @State private var tipPercentage = 20
    @FocusState private var amountIsFocused: Bool
    
    let tipPercentages = [0, 5, 10, 15, 20, 25]
    let localCurrency: FloatingPointFormatStyle<Double>.Currency = .currency(code: Locale.current.currencyCode ?? "EUR")
    
    var totalPerPerson: Double {
        let peopleCount = Double (numberOfPeople + 2)
        let tipSelection = Double (tipPercentage)
        
        let tipValue = checkAmount / 100 * tipSelection
        let grandTotal = checkAmount + tipValue
        return grandTotal / peopleCount
    }
    
    var grandTotal: Double {
        let tipSelection = Double (tipPercentage)
        let tipValue = checkAmount / 100 * tipSelection
        return checkAmount + tipValue
    }
    
    var body: some View {
        NavigationView {
            Form {
                Section {
                    TextField("Rechnungsbetrag", value: $checkAmount, format: localCurrency)
                        .keyboardType(.decimalPad)
                        .focused($amountIsFocused)
                    Picker("Wieviel Personen? ", selection: $numberOfPeople) {
                        ForEach(2..<100) {
                            Text("\($0) Personen")
                        }
                    }
                } header: {
                    Text ("Wie hoch ist die Rechnung?")
                }
                
                Section {
                    
                    Picker ("% Trinkgeld", selection: $tipPercentage) {
                        ForEach(tipPercentages, id: \.self) {
                            Text ($0, format: .percent)
                        }
                    }
                    .pickerStyle(.segmented)
                } header: {
                    Text ("Wieviel Trinkgeld mÃ¶chtest Du geben?")
                }
                
                Section{
                    Text(grandTotal, format: localCurrency)
                } header: {
                    Text ("Gesamtsumme inclusive Trinkgeld")
                }
                
                Section {
                    Text(totalPerPerson, format: localCurrency)
                } header: {
                    Text ("Jede Person zahlt:")
                }
            }
            .navigationTitle("WeSplit")
            .toolbar {
                ToolbarItemGroup (placement: .keyboard) {
                    Spacer()
                    Button ("Done") {
                        amountIsFocused = false
                    }
                }
            }
        }
    }
}

struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        Group {
            ContentView()
                .previewInterfaceOrientation(.portrait)
            
        }
    }
}
